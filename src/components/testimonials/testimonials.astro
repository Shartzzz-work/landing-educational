---
import { Image } from 'astro:assets';

import imgTestimonial from './img/businessman.jpg';
---

<section id="testimonials">
  <button type="button" name="sliderPrev" title="previous slider" class="testimonials-button">
    <svg viewBox="0 0 18 34" fill="none" xmlns="http://www.w3.org/2000/svg" class="icon-arrow">
      <path d="M17.9136 30.8133L17.9136 16.2766L17.9136 3.18664C17.9136 0.946644 15.2069 -0.173356 13.6202 1.41331L1.53357
